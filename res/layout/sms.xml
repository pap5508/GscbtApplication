<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/back"
	android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="bottom">
	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/sms_service_title"
		android:layout_height="wrap_content" android:id="@+id/linearLayout1"
		android:orientation="horizontal" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true">
		<Button android:id="@+id/sendsms_home" android:drawableLeft="@drawable/home"
			android:layout_height="wrap_content" android:textColor="#ffffff"
			android:layout_marginBottom="5dip" android:layout_weight="1"
			android:layout_width="0dp" android:layout_gravity="left"
			android:layout_marginLeft="10dip" android:background="@null"></Button>
		<TextView android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_weight="1"
			android:layout_width="0dp" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView4" android:text=" "></TextView>
		<Button android:id="@+id/sendsms_back"
			android:layout_marginRight="10dip" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:layout_weight="1"
			android:layout_width="0dp" android:layout_marginTop="10dip"
			android:drawableRight="@drawable/back_icon" android:background="@null"></Button>
	</LinearLayout>


	<LinearLayout android:background="@drawable/footer_title"
		android:layout_height="wrap_content" android:id="@+id/linearLayout2"
		android:orientation="vertical" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		<Button android:drawableTop="@drawable/ok_icon"
			android:background="@null" android:textColor="#ffffff" android:id="@+id/btnSendSMS"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_gravity="center" android:text="SEND SMS"
			android:layout_marginTop="10dip"></Button>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout3" android:orientation="vertical"
		android:layout_below="@+id/linearLayout1"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:layout_marginTop="10dip">
		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView1" android:text="BloodBank Number"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_alignParentTop="true"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/txtPhoneNo"
			android:layout_alignParentLeft="true" android:editable="false"
			android:layout_width="fill_parent">
		</EditText>
		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView1" android:textColor="#000000" android:text="Message"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentTop="true"></TextView>
		<EditText android:layout_width="fill_parent" android:id="@+id/txtMessage"
			android:inputType="text" android:layout_height="120px"
			android:layout_alignParentLeft="true">

		</EditText>
		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView1" android:textColor="#000000" android:text="Add Packets"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentTop="true"></TextView>
		<EditText android:layout_width="fill_parent" android:id="@+id/txtMessage"
			android:inputType="text" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true">

		</EditText>
	</LinearLayout>

</RelativeLayout>
