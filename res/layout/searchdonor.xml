<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/back"
	android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="top">
	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/search_title" android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:orientation="horizontal"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
		<Button android:id="@+id/searchdonor_home"
			android:drawableLeft="@drawable/home" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:layout_marginBottom="5dip"
			android:layout_weight="1" android:layout_width="0dp"
			android:layout_gravity="left" android:layout_marginLeft="10dip"
			android:background="@null"></Button>
		<TextView android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_weight="1"
			android:layout_width="0dp" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView4" android:text=" "></TextView>
		<Button android:id="@+id/searchdonor_back"
			android:layout_marginRight="10dip" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:layout_weight="1"
			android:layout_width="0dp" android:layout_marginTop="10dip"
			android:drawableRight="@drawable/back_icon" android:background="@null"></Button>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:background="@drawable/footer_title" android:id="@+id/linearLayout2"
		android:orientation="vertical" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		<Button android:drawableTop="@drawable/exit_icon"
			android:background="@null" android:textColor="#ffffff"
			android:id="@+id/searchdonor_logout" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="center"
			android:text="LOGOUT" android:layout_marginTop="10dip"></Button>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/ll1_searchdonor"
		android:layout_below="@+id/linearLayout1"
		android:layout_alignParentLeft="true">
		<TextView android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_weight="1"
			android:layout_width="0dp" android:layout_marginTop="20dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/tv_sdwelcome" android:text="Welcome"></TextView>
		<TextView android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_weight="1"
			android:layout_width="0dp" android:layout_marginTop="20dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/tv_sduname"></TextView>
	</LinearLayout>

	<LinearLayout android:id="@+id/linearLayout3"
		android:layout_height="wrap_content" android:layout_below="@+id/linearLayout1"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:layout_marginTop="50dip">
		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" android:id="@+id/textView1"
			android:text="BloodGroup" android:layout_weight="1"
			android:textColor="#000000" android:layout_width="0dp"></TextView>
		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" android:id="@+id/textView2"
			android:text="Blood Sign" android:layout_weight="1"
			android:textColor="#000000" android:layout_width="0dp"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/textView3"
			android:text=" " android:layout_width="80px" android:textColor="#000000"
			android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout4"
		android:layout_height="wrap_content" android:layout_below="@+id/linearLayout3"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
		<Spinner android:layout_height="wrap_content" android:id="@+id/searchdonor_spinner"
			android:layout_width="0dp" android:layout_weight="1"
			android:layout_gravity="center"></Spinner>
		<Spinner android:layout_height="wrap_content" android:id="@+id/searchdonor_spinnersign"
			android:layout_width="0dp" android:layout_weight="1"
			android:layout_gravity="center"></Spinner>
		<ImageButton android:src="@drawable/search_icon"
			android:background="@null" android:id="@+id/searchbb_searchdonor"
			android:layout_height="80px" android:layout_width="80px"
			android:layout_gravity="center"></ImageButton>
	</LinearLayout>


</RelativeLayout>
