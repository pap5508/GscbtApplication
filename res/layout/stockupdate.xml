<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/back"
	android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="top">
	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/stock_update_title"
		android:layout_height="wrap_content" android:id="@+id/linearLayout1"
		android:orientation="horizontal" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true">
		<Button android:id="@+id/stockupdate_home"
			android:drawableLeft="@drawable/home" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:layout_marginBottom="5dip"
			android:layout_weight="1" android:layout_width="0dp"
			android:layout_gravity="left" android:layout_marginLeft="10dip"
			android:background="@null"></Button>
		<TextView android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="0dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView4" android:text=" "></TextView>
		<Button android:id="@+id/stockupdate_back"
			android:layout_marginRight="10dip" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:layout_weight="1"
			android:layout_width="0dp" android:layout_marginTop="10dip"
			android:drawableRight="@drawable/back_icon" android:background="@null"></Button>
	</LinearLayout>
	<LinearLayout android:background="@drawable/footer_title"
		android:id="@+id/linearLayout2" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		<Button android:drawableTop="@drawable/exit_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/stock_logout"
			android:text="LOGOUT" android:layout_height="wrap_content"
			android:layout_width="0dp" android:layout_gravity="bottom"></Button>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/ll1_stock"
		android:layout_below="@+id/linearLayout1"
		android:layout_alignParentLeft="true">
		<TextView android:text="Welcome" android:layout_weight="1"
			android:textColor="#000000" android:layout_width="0dp"
			android:id="@+id/tv_stockwelcome" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" android:layout_marginTop="20dp"></TextView>
		<TextView android:layout_weight="1" android:layout_width="0dp"
			android:id="@+id/tv_stockuname" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" android:layout_marginTop="20dp"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="wrap_content"
		android:layout_below="@+id/ll1_stock" android:layout_alignParentLeft="true">

		<LinearLayout android:layout_height="wrap_content"
			android:layout_marginTop="5dp" android:layout_width="fill_parent"
			android:id="@+id/ll10_stock">
			<TextView android:text="BloodGroup" android:layout_gravity="center"
				android:textColor="#000000" android:layout_weight="1"
				android:layout_width="0dp" android:id="@+id/tv_subcatbb"
				android:layout_height="wrap_content"></TextView>
			<Spinner android:layout_height="40dp" android:layout_gravity="center"
				android:id="@+id/search_spinnerbgstock" android:layout_weight="1"
				android:layout_width="0dp"></Spinner>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_gravity="right" android:layout_marginTop="3dp"
			android:layout_width="wrap_content" android:id="@+id/ll13_stock">
			<ImageButton android:background="@null"
				android:layout_height="wrap_content" android:src="@drawable/search_icon"
				android:layout_width="wrap_content" android:id="@+id/search_searchstock"></ImageButton>

		</LinearLayout>
	</LinearLayout>

</RelativeLayout>
