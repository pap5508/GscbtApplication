<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/back"
	android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:background="@drawable/gscbt_title"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		

	</LinearLayout>
	<LinearLayout android:background="@drawable/footer_title"
		android:id="@+id/linearLayout2" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		<Button android:drawableTop="@drawable/usersection_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/main_user" android:text="USER"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_gravity="bottom"></Button>
		<Button android:drawableTop="@drawable/search_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/main_search" android:text="SEARCH"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_gravity="bottom"></Button>
		<Button android:drawableTop="@drawable/about_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/main_aboutus"
			android:text="ABOUT" android:layout_height="wrap_content"
			android:layout_width="0dp" android:layout_gravity="bottom"></Button>
		<Button android:drawableTop="@drawable/contact_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/main_contactus"
			android:text="CONTACT" android:layout_height="wrap_content"
			android:layout_width="0dp" android:layout_gravity="bottom"></Button>
		<Button android:drawableTop="@drawable/exit_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/main_exit" android:text="EXIT"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_gravity="bottom"></Button>
	</LinearLayout>
	<ImageView android:src="@drawable/logo" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/imageView1"
		android:layout_centerVertical="true" android:layout_centerHorizontal="true"></ImageView>

</RelativeLayout>
