<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/ll1_list"
		android:layout_marginTop="10dp">
		<TextView android:text="Id" android:layout_width="0dp"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
		<TextView android:id="@+id/text_1" android:layout_width="0dp"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:id="@+id/ll2_list" android:layout_height="wrap_content"
		android:layout_below="@+id/ll1_list">
		<TextView android:text="BloodBank" android:layout_width="0dp"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
		<TextView android:id="@+id/text_2" android:layout_width="0dp"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/ll3_list"
		android:layout_below="@+id/ll2_list">
		<TextView android:text="BloodGroup" android:layout_width="0dp"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
		<TextView android:id="@+id/text_3" android:layout_width="0dp"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:id="@+id/ll4_list" android:layout_height="wrap_content"
		android:layout_below="@+id/ll3_list">
		<TextView android:text="Place" android:layout_width="0dp"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
		<TextView android:id="@+id/text_4" android:layout_width="0dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:layout_weight="1"></TextView>
	</LinearLayout>
</RelativeLayout>
