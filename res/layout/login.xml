<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/back"
	android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:background="@drawable/login_title"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:orientation="horizontal">
		<Button android:drawableLeft="@drawable/home"
			android:background="@null" android:textColor="#ffffff" android:id="@+id/log_home"
			android:layout_height="wrap_content" android:layout_gravity="left"
			android:layout_marginLeft="10dip" android:layout_marginBottom="5dip"
			android:layout_weight="1" android:layout_width="0dp"></Button>
		<TextView android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" android:id="@+id/textView4"
			android:text=" " android:layout_weight="1" android:layout_width="0dp"></TextView>
		<Button android:drawableRight="@drawable/back_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/log_back"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_marginRight="10dip" android:layout_marginTop="10dip"></Button>
	</LinearLayout>
	<LinearLayout android:background="@drawable/footer_title"
		android:id="@+id/linearLayout2" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		<Button android:drawableTop="@drawable/ok_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/log_in" android:text="LOGIN"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_gravity="bottom"></Button>
		<Button android:drawableTop="@drawable/reset_icon"
			android:background="@null" android:textColor="#ffffff"
			android:layout_weight="1" android:id="@+id/log_cancel" android:text="CANCEL"
			android:layout_height="wrap_content" android:layout_width="0dp"
			android:layout_gravity="bottom"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_below="@+id/linearLayout1"
		android:layout_alignParentLeft="true" android:layout_marginTop="20dip">
		<TextView android:layout_width="0dp" android:textColor="#000000"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:id="@+id/tv_uname" android:text="Username"></TextView>
		<EditText android:layout_width="0dp" android:layout_weight="1"
			android:id="@+id/log_uname" android:layout_height="40dp"></EditText>
	</LinearLayout>
	<LinearLayout android:id="@+id/ll5_reg"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_below="@+id/linearLayout2"
		android:layout_alignParentLeft="true">
		<TextView android:layout_width="0dp" android:textColor="#000000"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:id="@+id/tv_pwd" android:text="Password"></TextView>
		<EditText android:layout_width="0dp" android:layout_weight="1"
			android:id="@+id/log_pwd" android:inputType="textPassword"
			android:layout_height="40dp">

		</EditText>
	</LinearLayout>
</RelativeLayout>
