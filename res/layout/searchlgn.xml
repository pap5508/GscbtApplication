<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/back"
	android:id="@+id/relativeLayout1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="top">
	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/search_title" android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:orientation="horizontal"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
		<Button android:id="@+id/searchlgn_home" android:drawableLeft="@drawable/home"
			android:layout_height="wrap_content" android:textColor="#ffffff"
			android:layout_marginBottom="5dip" android:layout_weight="1"
			android:layout_width="0dp" android:layout_gravity="left"
			android:layout_marginLeft="10dip" android:background="@null"></Button>
		<TextView android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="0dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView4" android:text=" "></TextView>
		<Button android:id="@+id/searchlgn_back"
			android:layout_marginRight="10dip" android:layout_height="wrap_content"
			android:textColor="#ffffff" android:layout_weight="1"
			android:layout_width="0dp" android:layout_marginTop="10dip"
			android:drawableRight="@drawable/back_icon" android:background="@null"></Button>
	</LinearLayout>
	<LinearLayout android:background="@drawable/footer_title"
		android:layout_height="wrap_content" android:id="@+id/linearLayout2"
		android:orientation="vertical" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		<Button android:drawableTop="@drawable/exit_icon"
			android:background="@null" android:textColor="#ffffff"
			android:id="@+id/searchdonor_logout" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="center"
			android:text="LOGOUT" android:layout_marginTop="10dip"></Button>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_below="@+id/ll1_searchdonor"
		android:layout_alignParentLeft="true">
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout3" android:layout_below="@+id/linearLayout1"
		android:layout_alignParentLeft="true" android:layout_width="fill_parent">
		<TextView android:layout_height="wrap_content"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView1" android:text="CITY"
			android:layout_weight="1" android:layout_width="0dp"></TextView>
		<TextView android:layout_height="wrap_content"
			android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/textView2" android:text="BloodGroup"
			android:layout_weight="1" android:layout_width="0dp"></TextView>
		<TextView android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_weight="1" android:id="@+id/textView3"
			android:layout_width="0dp" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/ll9_searchdonor"
		android:layout_below="@+id/linearLayout3"
		android:layout_alignParentLeft="true">
		<Spinner android:id="@+id/searchlgn_spinner"
			android:layout_width="0dp" android:layout_height="40dp"
			android:layout_gravity="center" android:layout_weight="1"></Spinner>
		<Spinner android:id="@+id/searchlgn_spinnerbg"
			android:layout_width="0dp" android:layout_height="40dp"
			android:layout_gravity="center" android:layout_weight="1"></Spinner>
		<Button android:id="@+id/searchlgn_search" android:drawableTop="@drawable/search_icon"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:background="@null" android:layout_weight="1"
			android:layout_width="0dp"></Button>
	</LinearLayout>

</RelativeLayout>
